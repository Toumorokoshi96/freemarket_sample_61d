%body
  .single-header-st1_k
    .merukari_box_k
      =link_to image_tag("https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg",alt: "Mercari", size: '185x49'), root_path
      .progress-bar
        %ol.clearfix_k
          %li.active_k8
            会員情報
            .progress-status_on_k
          %li.active_k2
            電話番号認証
            .progress-status_on_k
          %li.active_k7
            お届け先住所入力
            .progress-status_on_k
          %li.active_k4
            支払い方法
            .progress-status_k
          %li.active_k5
            完了
            .progress-status_k
        .line_st4_on
        .line_st4_off
        
  .single-main-st1_k
    .l-single-container_k
      .l-single-head_k
        
      .form_box_k
        .l-single-content_k
          = form_for @user, url: step5_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
            .form-group_name_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    お名前
                  .form-require_nickname_st4_k
                    必須
                = f.text_field :sur_name,value: "#{@sur}" , placeholder: '例) 山田'
                = f.text_field :fr_name,value: "#{@fr}", placeholder: '例) 彩'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    お名前カナ
                  .form-require_mail_st4_k
                    必須
                = f.text_field :sur_name_yomi,value: "#{@sur_yomi}", placeholder: '例) ヤマダ'
                = f.text_field :first_name_yomi, value: "#{@fr_yomi}" ,placeholder: '例) アヤ'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    郵便番号
                  .form-require_pass_st4_k
                    必須
                = f.text_field :address_number, placeholder: '例) 123-5678'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    都道府県
                  .form-require_passc_st4_k
                    必須  
                = f.collection_select :address_ken, Prefecture.all, :id, :name
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    市区町村
                  .form-require_city_st4_k
                    必須  
                = f.text_field :address_city, placeholder: '例) 横浜市緑区'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    番地
                  .form-require_banch_st4_k
                    必須  
                = f.text_field :address_banch, placeholder: '青山1-1-1'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    建物名
                  .form-require_bl_st4_k
                    任意 
                = f.text_field :building_name, placeholder: '柳ビル103'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    電話番号
                  .form-require_tel_st4_k
                    任意  
                = f.text_field :tel_number, placeholder: '09012345678'
            .form-bottan-k
              .form-bottan-set-k
                = f.submit '次へ進む', class: 'submit-btn_k',method: :post
  %footer.product-new-footer
    = render 'shared/simple_footer'
  
  
  