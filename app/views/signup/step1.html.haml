%body
  .single-header-st1_k
    .merukari_box_k
      =link_to image_tag("https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg",alt: "Mercari", size: '185x49'), products_path
      .progress-bar
        %ol.clearfix_k
          %li.active_k1
            会員情報
            .progress-status_on_k
          %li.active_k2
            電話番号認証
            .progress-status_k
          %li.active_k3
            お届け先住所入力
            .progress-status_k
          %li.active_k4
            支払い方法
            .progress-status_k
          %li.active_k5
            完了
            .progress-status_k
        .line_st1
  .single-main-st1_k
    .l-single-container_k
      .l-single-head_k
        会員情報入力
      .form_box_k
        .l-single-content_k
          = form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
            .form-group_name_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    ニックネーム
                  .form-require_nickname_k
                    必須
                = f.text_field :nick_name, placeholder: 'ニックネーム'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    メールアドレス
                  .form-require_mail_k
                    必須
                = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    パスワード
                  .form-require_pass_k
                    必須
                = f.password_field :password, placeholder: '7文字以上'
            .form-group_k
              .form_lavel_k
                .form_lavel_text_k
                  .text_k
                    パスワード(確認)
                  .form-require_passc_k
                    必須  
                = f.password_field :password_confirmation, placeholder: '7文字以上'
            .form-group_robot_k
              = recaptcha_tags
            .form-bottan-k
              .form-bottan-set-k
                = f.submit '次へ進む', class: 'submit-btn_k',method: :post
  %footer.product-new-footer-T
    %nav
      %ul.flexcontainer
        %li
          =link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
        %li
          =link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/"
        %li
          =link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
    =link_to "https://www.mercari.com/jp/", class: "product-new-footer-LOGO-t" do
      =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?1248199994", alt: "mercari", width: "80", height: "65"
    %p
      %small &copy; 2019 Mercari