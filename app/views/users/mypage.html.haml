.wrapper
  .wrapper_user
    .wrapper_user__icon
      .opi
        %figure
          - if current_user.icon_image == nil
            = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", width: "60", alt: "", height: "60"
          - else
            = image_tag current_user.icon_image, width: "60", alt: "", height: "60"
    
      %h2.name
        = current_user.nick_name
      .mypage-number
        %div
          評価:
          %span
            = current_user.evaluation
        %div
          出品数:
          %span 
            = current_user.exhibits_number
    .my-sold
      .my-sold__money
        %p 売上金
        %h1 ¥0
        %i.fa.fa-chevron-right.my
      .my-sold__point
        %p ポイント
        %h1 P0
        %i.fa.fa-chevron-right.my
      %nav.mypage-nav
        %ul.mypage-nav-list 
          %li
            .mypage-nav-list-item
              =link_to "いいね！一覧", ""
              .fa.fa-chevron-right
          %li
            .mypage-nav-list-item
              =link_to "出品した商品 - 出品中", progress_users_path
              .fa.fa-chevron-right
          %li
            .mypage-nav-list-item
              =link_to "出品した商品 - 取引中", ""
              .fa.fa-chevron-right
          %li
            .mypage-nav-list-item
              =link_to "出品した商品 - 売却済み", ""
              .fa.fa-chevron-right
          %li
            .mypage-nav-list-item
              =link_to "購入した商品 - 取引中", ""
              .fa.fa-chevron-right
          %li
            .mypage-nav-list-item
              =link_to "購入した商品 - 過去の取引", ""
              .fa.fa-chevron-right