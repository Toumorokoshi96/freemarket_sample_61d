- breadcrumb :cards

.default-container
  = render 'shared/header'
  = render 'shared/bread_bar'
  %main.l-container.clearfix
    .l-content
      %section.l-chapter-container
        %h2.l-chapter-head 支払い方法
        .l-single
          %section
            .l-single-content
              %h3.l-chapter-sub-head クレジットカード一覧
            %ul.settings-payment-list
          %section.settings-add-card
            .l-single-content
              .btn-default.btn-red.submit_button
                =link_to "クレジットカードを追加する", "/cards/new"
                %i.fa.fa-credit-card
          .settings-not-regist
            =link_to "支払い方法について", "/jp/help_center/category/6/"
            %i.fa.fa-chevron-right
    .l-side
      = render 'shared/side_bar'
      = render 'shared/cameraicon'
  =render 'shared/footer'
