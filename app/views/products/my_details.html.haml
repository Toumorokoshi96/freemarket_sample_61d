- breadcrumb :my_details
.default-container
  = render 'shared/header'
  = render 'shared/bread_bar'
%main.l-container.clearfix
  %section.h-single-container
    %h1.item-name
      =@product.name
    .item-main-contentclearfix
      .item-photo
        .owl-carousel
          .owl-item-inner 
            = image_tag("#{@image.product_image}")
      .item-price-box.text-center.visible-sp
        %span.item-price.bold 
          ¥
          = @product.price
        %span.item-tax (税込)
        %span.item-shipping-fee 送料込み
      %section.visible-sp
        .item-btn-float-area item-buy-btn
        = link_to '購入画面に進む', ''     
      %table.item-detail-table
        %tr
          %th 出品者
          %td
            -# = link_to "#{@user.nick_name}"
            %div
              .item-user-ratings
                %i.fa.fa-good
                %span 26
              .item-user-ratings
                %i.fa.fa-normal
                %span 0
              .item-user-ratings
                %i.fa.fa-bad
                %span 0
        %tr
          %th カテゴリー
          %td.ct_bo_k
            %div.ct_1_k 
              %h6
                = @product.parent
            %div.ct_2_k
              %h6
                %i.fa.fa-arrow-right
                  = @product.child
            %div.ct_3_k
              %h6
                %i.fa.fa-arrow-right
                  = @product.grand
        %tr
          %th ブランド
          %td
        %tr
          %th 商品の状態
          %td=@product.status
        %tr
          %th 配送料の負担
          %td=@product.delivery_fee
        %tr
          %th 配送の方法
          %td=@product.delivery_method
        %tr
          %th 配送元地域
          %td
            = link_to(@product.delivery_from)
        %tr
          %th 発送日の目安
          %td 1~2日で発送
    .item-price-box.text-center
      %span.item-price.bold 
        ¥
        = @product.price
      %span.item-tax (税込)
      %span.item-shipping-fee 送料込み
    .l-content
      .listing-item-change-box
        =link_to "商品の編集","/products/#{@product.id}/edit",class:"btn-default btn-red"
        %p.text-center or
        %button.btn-default.btn-gray{type: "submit"} 出品を一旦停止する
        %button.btn-default.btn-gray
          = link_to 'この商品を削除する', "/products/#{@product.id}", method: :delete
      .item-detail-message
        .message-container
          .message-content
            %form.message-form
              %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
              %textarea.textarea-default{name: "body", type: "text", value: ""}
              %button.message-submit.btn-default.btn-gray{type: "submit"}
                %span コメントする
=render 'shared/footer'